<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeselValidation.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Sprawdź swój PESEL" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>

        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Wpisz PESEL:"/>
            <Entry x:Name="inputPESEL" Keyboard="Numeric"/>
            <Button x:Name="checkBtn" Text="SPRAWDŹ" BackgroundColor="#2196F3" TextColor="White" HorizontalOptions="Center" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
